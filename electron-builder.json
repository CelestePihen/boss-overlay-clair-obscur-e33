{
  "appId": "fr.cel.boss-overlay",
  "productName": "Boss Overlay - Clair Obscur E33",
  "npmRebuild": false,
  "directories": {
    "output": "release"
  },
  "files": ["dist/**/*", "dist-electron/**/*", "package.json"],
  "win": {
    "target": ["nsis", "portable"],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "portable": {
    "artifactName": "Boss-Overlay-Portable.exe"
  },
  "extraResources": [
    {
      "from": "data",
      "to": "data"
    },
    {
      "from": "tools",
      "to": "tools"
    }
  ]
}
