{
  "appId": "fr.cel.boss-overlay",
  "productName": "Boss Overlay - Clair Obscur E33",
  "npmRebuild": false,
  "directories": {
    "output": "release"
  },
  "files": [
    {
      "from": "dist",
      "to": "dist",
      "filter": ["**/*"]
    },
    {
      "from": "dist-electron",
      "to": "dist-electron",
      "filter": ["**/*"]
    },
    "package.json"
  ],
  "win": {
    "target": ["nsis", "portable"],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "portable": {
    "artifactName": "Boss-Overlay-Portable.exe"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build/icon.png",
    "category": "Game"
  },
  "extraResources": [
    {
      "from": "data",
      "to": "data"
    },
    {
      "from": "tools",
      "to": "tools"
    }
  ]
}
